@model EnterprisePaymentViewModel

<div class="row">
    <div class="col-md-6">
        <form id="requestPaymentForm" action="https://prepro.adquiracloud.mx/clb/endpoint/axtel/" method="post">
            <div class="form-group">
                <div id="panel-father-send-first" class="panel panel-primary">
                    <div id="panel-send-first" class="panel-heading">Datos de Envio al Banco</div>
                    <div  class="panel-body">
                        <label for="Mp_order">Service Request</label>
                        <input type="text" name="mp_order" id="mp_order" value=@Model.Mp_order class="form-control" readonly />
                        <label for="BillingAccount">Cta. Facturación</label>
                        <input type="text" id="BillingAccount" value=@Model.BillingAccount class="form-control" readonly />
                        <label for="Mp_amount">Monto a Pagar</label>
                        <input type="number" name="mp_amount" id="mp_amount" value="0.00" class="form-control" placeholder="Monto a Pagar" />
                        <label for="Currency">Divisa</label>
                        <input type="text" id="Currency" value=@Model.Currency class="form-control" readonly />
                        <label for="Mp_customername">Nombre Pagador</label>
                        <input type="text" name="mp_customername" id="mp_customername" class="form-control" placeholder="Nombre Pagador" />
                        <label for="CreateToken">Domiciliación de Tarjeta (generar token)</label>
                        <input type="text" id="CreateToken" value=@Model.CreateToken class="form-control" readonly />
                        <input type="hidden" id="BeginPaymentId" value=@Model.BeginPaymentId class="form-control" />
                        <input type="hidden" name="mp_account" id="mp_account" value=@Model.Mp_account class="form-control" />
                        <input type="hidden" name="mp_product" id="mp_product" value=@Model.Mp_product class="form-control" />
                        <input type="hidden" name="mp_reference" id="mp_reference" value=@Model.Mp_reference class="form-control" />
                        <input type="hidden" name="mp_node" id="mp_node" value=@Model.Mp_node class="form-control" />
                        <input type="hidden" name="mp_concept" id="mp_concept" value=@Model.Mp_concept class="form-control" />
                        <input type="hidden" name="mp_signature" id="mp_signature" value=@Model.Mp_signature class="form-control" />
                        <input type="hidden" name="mp_currency" id="mp_currency" value=@Model.Mp_currency class="form-control" />
                        <input type="hidden" name="mp_urlsuccess" id="mp_urlsuccess" value=@Model.Mp_urlsuccess class="form-control" />
                        <input type="hidden" name="mp_urlfailure" id="mp_urlfailure" value=@Model.Mp_urlfailure class="form-control" />
                        <input type="hidden" name="mp_registersb" id="mp_registersb" value=@Model.Mp_registersb class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default" name="enviar"> Aceptar </button>
                <button type="button" class="btn btn-default" name="cancelar" onclick="window.close()"> Cancelar </button>
            </div>
        </form>
        
    </div>
    <div class="col-md-6">
                <form id="responsePaymenForm" action="" method="post">
                    <div class="form-group">
                        <div id="panel-father-send-first" class="panel panel-primary">
                            <div id="panel-send-first" class="panel-heading">Datos de Respuesta del Banco</div>
                            <div class="panel-body">
                                <label for="BankResponse">Respuesta del Banco</label>
                                <input type="text" name="BankResponse" id="BankResponse" class="form-control" disabled />
                                <label for="TransactionNumber">Número de Aprobación</label>
                                <input type="text" name="TransactionNumber" id="TransactionNumber" class="form-control" disabled />
                                <label for="Token">Token</label>
                                <input type="text" name="Token" id="Token" class="form-control" disabled />
                                <label for="CcLastFour">Terminación de la tarjeta</label>
                                <input type="text" name="CcLastFour" id="CcLastFour" class="form-control" disabled />
                                <label for="IssuingBank">Banco Emisor</label>
                                <input type="text" name="IssuingBank" id="IssuingBank" class="form-control" disabled />
                                <label for="CcType">Tipo de Tarjeta</label>
                                <input type="text" name="CcType" id="CcType" class="form-control" disabled />
                            </div>
                            </div>
                        </div>
                </form>
        </div>
    </div>
